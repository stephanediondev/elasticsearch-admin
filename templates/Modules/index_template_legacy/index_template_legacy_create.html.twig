{% extends 'base.html.twig' %}
{% import 'Import/app_import.html.twig' as appImport %}

{% block head_title %}{{ 'index_templates_legacy'|trans }} - {{ 'create_index_template_legacy'|trans }}{% endblock %}

{% block heading_1 %}
    {{ appImport.heading({'level': 1, 'title': 'index_templates_legacy'|trans}) }}
{% endblock %}

{% block tabs %}
    {% include 'Modules/index_template_legacy/index_template_legacy_tabs.html.twig' with {'active': 'create_index_template_legacy'} %}
{% endblock %}

{% block main_content %}
    {% if true == hasFeature('composable_template') %}
        <div class="jumbotron mt-3 bg-secondary-subtle border">
            <p class="lead">{{ 'deprecated_legacy_index_templates'|trans({'{href}': path('index_templates'), '{class}': 'text-secondary'})|raw }}</p>
        </div>
    {% endif %}

    {% embed 'Embed/block_embed.html.twig' %}
        {% import 'Import/app_import.html.twig' as appImport %}
        {% block content %}
            {{ appImport.heading({'level': 3, 'title': 'create_index_template_legacy'|trans}) }}

            {% embed 'Embed/buttons_embed.html.twig' %}
                {% import 'Import/app_import.html.twig' as appImport %}
                {% block content %}
                    <a class="btn btn-secondary btn-sm" rel="noreferrer" target="_blank" href="https://www.elastic.co/guide/en/elasticsearch/reference/current/indices-templates-v1.html#indices-templates-v1">
                        {{ 'help'|trans }}
                    </a>
                {% endblock %}
            {% endembed %}

            {{ appImport.form({'form': form}) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
