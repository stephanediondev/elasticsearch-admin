{% embed 'Embed/table_embed.html.twig' %}
    {% import 'Import/app_import.html.twig' as appImport %}

    {% set columns = {'name': true, 'description': true, 'version': true, 'processors': true} %}

    {% block thead %}
        <tr>
            {% for column, display in columns %}
                {% if true == display %}
                    {% if 'name' == column %}
                        <th>
                            {{ 'name'|trans }}{{ appImport.badge({'title': 'sort_asc'|trans, 'context': 'secondary'}) }}
                        </th>
                    {% endif %}

                    {% if 'description' == column %}
                        <th>
                            {{ 'description'|trans }}
                        </th>
                    {% endif %}

                    {% if 'version' == column %}
                        <th>
                            {{ 'version'|trans }}
                        </th>
                    {% endif %}

                    {% if 'processors' == column %}
                        <th>
                            {{ 'processors'|trans }}
                        </th>
                    {% endif %}
                {% endif %}
            {% endfor %}
        </tr>
    {% endblock %}

    {% block tbody %}
        {% for row in pipelines.rows %}
            <tr>
                {% for column, display in columns %}
                    {% if true == display %}
                        {% if 'name' == column %}
                            <td class="text-nowrap">
                                <a class="text-info" href="{{ path('pipelines_read', {'name': row.name}) }}">{{ row.name }}</a>
                            </td>
                        {% endif %}

                        {% if 'description' == column %}
                            <td>
                                {{ row.description }}
                            </td>
                        {% endif %}

                        {% if 'version' == column %}
                            <td>
                                {% if row.version is defined %}
                                    {{ row.version }}
                                {% endif %}
                            </td>
                        {% endif %}

                        {% if 'processors' == column %}
                            <td>
                                {{ row.processors|length }}
                            </td>
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
    {% endblock %}
{% endembed %}
